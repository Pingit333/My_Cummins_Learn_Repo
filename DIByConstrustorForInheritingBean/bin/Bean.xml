<?xml version="1.0" encoding="UTF-8"?>
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  

<bean id="address0" class="com.spring.Address">  
	<constructor-arg value="India" type="String"></constructor-arg>  
</bean>
  
<bean id="studentbean0" class="com.spring.Student">  
	<constructor-arg value="20" type="int"></constructor-arg> 
	<constructor-arg value="Himanshu" type="String"></constructor-arg>
	<constructor-arg ><ref bean="address0"/></constructor-arg>  
</bean>  
  
</beans>  